# Description: Screenshot utility
# URL:         https://github.com/dreamer/scrot
# Maintainer:  Chris Farrell, timcowchip at gorge dot net
# Depends on:  giblib

name=scrot
version=0.8
release=1
source=(https://github.com/dreamer/scrot/archive/master.zip)

build() {

	cd $name-master

	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
	rm -r $PKG/usr/doc
}
