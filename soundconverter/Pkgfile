# Description: audio file converter
# URL: https://launchpad.net/soundconverter/
# Maintainer: Chris Farrell, timcowchip at gorge dot net
# Depends on: ffmpeg lame opus faac faad2

name=soundconverter
version=3.0.0-beta1
release=1
source=(https://launchpad.net/soundconverter/trunk/3.0.0-beta1/+download/$name-$version.tar.xz)
build() {
	cd $name-$version
	
	./configure \
	--prefix=/usr \
	--libdir=/usr/lib${LIBDIRSUFFIX} \
	--sysconfdir=/etc \
	--localstatedir=/var \
	--mandir=/usr/man \
	--disable-nls

	make
	make  DESTDIR=$PKG  install
}
