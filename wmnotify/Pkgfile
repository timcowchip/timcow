# Description: dockapp email notification program for POP3 and IMAP4 servers
# URL: http://www.hugovil.com/projet.php?proj=${name}&lang=en_US
# Packager: Chris Farrell, timcowchip at gorge dot net
# Maintainer: Chris Farrell, timcowchip at gorge dot net
# Depends on: libxpm libsndfile

name=wmnotify
pkgdesc="dockapp email notification program for POP3 and IMAP4 servers"
version=1.0.1
release=1

source=("http://www.hugovil.com/repository/${name}/${name}-${version}.tar.gz")

  build() {
  cd ${name}-${version}
  sed -i -e 's,inline void,void,;t' src/common.h

  ./configure --prefix=/usr --mandir=/usr/share/man
  make

  make DESTDIR="$PKG" install
}
