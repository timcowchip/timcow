# Description: Lightweight panel/taskbar w/launchers
# URL: https://gitlab.com/o9000/tint2
# Maintainer: Chris Farrell, timcowchip at gmail dot com
# Depends on: git cmake imlib2 pango librsvg startup-notification

name=tint2
version=0.12.12
release=3

source=(https://bitbucket.org/timcowchip/linux-parts/raw/f7ac459ef068c1a3ef856b58f1156cc6ea37919e/$name-$version.tar.gz)

build() {

  cd $name
  
  mkdir -p build && cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr -DENABLE_TINT2CONF=1 

  make
  
  make DESTDIR=$PKG install
  rm -rf ${PKG}/usr/share/doc/
  rm -rf ${PKG}/usr/share/locale/
}
	
	
