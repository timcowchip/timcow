# Description: trojita
# URL: Index of http://trojita.flaska.net/index.html
# Maintainer: Chris Farrell, timcowchip at gmail dot com
# Depends on: qt5 qtwebkit ruby libepoxy gst-plugins-base

name=trojita
version=0.7
release=1
source=(http://downloads.sourceforge.net/trojita/trojita-0.7.tar.xz)

build() {

  cd $name-$version
  
  cmake \
    -DQT_QMAKE_EXECUTABLE=qmake-qt5 \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  
  make 

  make PREFIX=/usr DESTDIR="$PKG" install
  rm -rf ${PKG}/usr/share/doc/
  rm -rf ${PKG}/usr/share/locale/	
}
