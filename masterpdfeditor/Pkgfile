# Description: A complete solution for creation and editing PDF files
# URL:         https://code-industry.net/free-pdf-editor/
# Maintainer:  Chris Farrell, timcowchip at gorge dot net
# Depends on:  glibc qt5 sane 

name=masterpdfeditor
version=4.3.89
release=1

source=("https://code-industry.net/public/master-pdf-editor-${version}_qt5.amd64.tar.gz" "${name}.desktop")

build() 
{
  
  install -d "$PKG"{/opt/,/usr/bin/,/usr/share/applications/}
  cp -a --no-preserve=ownership "$SRC/master-pdf-editor-4" "$PKG/opt/"
  sed "s/VERMAJ/${version}/g" masterpdfeditor.desktop > "$PKG/usr/share/applications/masterpdfeditor${version}.desktop"
  ln -s /opt/master-pdf-editor-/masterpdfeditor-4 -t "$PKG/usr/bin/"
  install -Dm644 master-pdf-editor-4/license.txt -t "$PKG/usr/share/licenses/$name/"
}
