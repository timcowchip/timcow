# Description: Bittorrent client programmed in C++ / Qt that uses libtorrent (sometimes called libtorrent-rasterbar)
# URL:         http://www.qbittorrent.org/
# Maintainer:  Chris Farrell, timcowchip at gmail dot com 
# Depends on:	qt5 libtorrent-rasterbar xdg-utils boost python 

name=qbittorrent
version=3.3.12
release=1

source=("http://sourceforge.net/projects/qbittorrent/files/${name}/${name}-${version}/${name}-${version}.tar.xz")

build() {
    cd qbittorrent-${version}
    
    ./configure --prefix=/usr 
    make
    
    make INSTALL_ROOT=${PKG} install
}
