c# Description: Customizable weather widge
# URL: https://github.com/RingOV/gis-weather
# Maintainer: Chris Farrell, timcowchip at gmail dot com
# Depends on: gtk3 python pythongobject python-cairo

name=gis-weather
version=0.8.2.5
release=1

source=("https://svwh.dl.sourceforge.net/project/gis-weather/gis-weather/0.8.2.5/gis-weather-0.8.2.5.tar.gz")

build() 
{
  mkdir -p ${PKG}/usr/bin
  mkdir -p ${PKG}/usr/share/gis-weather
  mkdir -p ${PKG}/usr/share/applications
  cp -R $SRC/$name-$version/. $PKG/usr/share/gis-weather
  rm -fr $PKG/usr/share/gis-weather/.git
  chmod -R 777 $PKG/usr/share/gis-weather 
  echo "exec python /usr/share/gis-weather/gis-weather.py $*" > ${PKG}/usr/bin/gis-weather
  chmod 755 ${PKG}/usr/bin/gis-weather
  echo "[Desktop Entry]
Name=Gis Weather
Comment=Weather widget
Categories=GNOME;Utility;
Exec=/usr/bin/gis-weather
Icon=/usr/share/gis-weather/icon.png
Terminal=false
Type=Application" > $PKG/usr/share/applications/gis-weather.desktop
  #install -Dm644 "gis-weather.desktop" "$PKG/usr/share/applications/gis-weather.desktop"
  #install -Dm644 "$name.png" "$PKG/usr/share/pixmaps/$name.png"
}
