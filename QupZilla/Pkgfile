# Description: "A fast open source browser based on QtWebengine, written in Qt Framework
# URL: http://www.qupzilla.com/
# Maintainer: Chris Farrell, timcowchip at gmail dot com
# Depends on: qtwebengine mesa3d desktop-file-utils hicolor-icon-theme gdb

name=QupZilla
version=2.2.1
release=6

source=("https://raw.githubusercontent.com/timcowchip/DISTFILES/master/$name-$version.tar.gz")

build() {
    cd $name-$version/

    export USE_WEBGL="true"
    #export NO_X11="true"
   
    /usr/lib/qt5/bin/qmake 
    make

    make INSTALL_ROOT=${PKG}/ install
    
    rm -rf ${PKG}/usr/share/doc/
    rm -rf ${PKG}/usr/share/locale/
}
