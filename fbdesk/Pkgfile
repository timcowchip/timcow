# Description: icons tool for fluxbox
# URL: http://fluxbox.sourceforge.net/fbdesk/
# Maintainer: Chris Farrell, timcowchip at gmail dot com
# Packager: acrux <acrux@crux-it.org>
# Depends on: fluxbox libiconv 


name=fbdesk
version=1.4.1
release=1
source=(http://fluxbox.sourceforge.net/download/$name-$version.tar.gz \ $name-$version-gcc.patch \ $name-$version-false.patch \ $name-$version-options.patch \ $name-$version-libpng14.patch \ $name-$version-libpng15.patch)

build () {
    cd $name-$version
    patch -p1<../$name-$version-gcc.patch
    patch -p1<../$name-$version-false.patch
    patch -p1<../$name-$version-options.patch
    patch -p1<../$name-$version-libpng14.patch
    patch -p1<../$name-$version-libpng15.patch    
    ./configure --prefix=/usr \
    --disable-nls \
    --disable-png

    make
    make DESTDIR=$PKG install
    chown -R root:root $PKG
}
