# Description: A program that lets you manipulate digital audio waveforms
# URL: http://web.audacityteam.org/
# Packager: Chris Farrell, timcowchip at gmail dot com
# Maintainer: Chris Farrell, timcowchip at gmail dot com
# Depends on: git libvorbis libmad libid3tag wxgtk lame hicolor-icon-theme ffmpeg shared-mime-info desktop-file-utils redland jack-audio-connection-kit soundtouch cmake zip python 

name=audacity
version=2.1.2
release=1
source=("https://github.com/timcowchip/DISTFILES/raw/master/$name-$version.tar.gz" "ffmpeg.patch" "fix-build-errors.patch")
build() {
  cd $name-Audacity-$version

  patch -p1 -i "${SRC}/ffmpeg.patch"

  patch -p1 -i "${SRC}/fix-build-errors.patch"
  
  WX_CONFIG=/usr/bin/wx-config \
  CONFIG_SHELL=/bin/bash \
  ./configure --prefix=/usr \
  --enable-unicode \
  --disable-vamp \
  --with-wx-config=$WX_CONFIG \
  --with-libsamplerate \
  --with-libflac=local

  make
 
  make DESTDIR="${PKG}" install
  rm -rf ${PKG}/usr/share/locale/
  rm -rf ${PKG}/usr/share/doc/
}
