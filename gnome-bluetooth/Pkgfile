# Description:	Bluetooth libraries and utilities
# URL:		http://ftp.gnome.org/
# Maintainer:    Chris Farrell, timcowchip at gorge dot net
# Depends:	bluez itstool libcanberra gobject-introspection


name=gnome-bluetooth
version=3.26.1
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/gnome-bluetooth/3.26/$name-$version.tar.xz \ 61-gnome-bluetooth-rfkill.rules)

build() {

	cd $name-$version
	mkdir build
	cd build 
	meson --prefix=/usr
	ninja
	DESTDIR="$PKG" ninja install
	
	install -Dt "$PKG/usr/lib/udev/rules.d" -m644 $SRC/61-gnome-bluetooth-rfkill.rules
	
}
