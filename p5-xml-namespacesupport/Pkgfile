# Description:	Perl XML Modules
# URL:		http://cpansearch.perl.org/src/KMACLEOD/libxml-perl-0.08/doc/index.html
# Maintainer:     Chris Farrell, timcowchip at gmail dot com 
# Depends on:	p5-xml-sax-base

name=p5-xml-namespacesupport
version=1.11
release=1
source=(http://search.cpan.org/CPAN/authors/id/P/PE/PERIGRIN/XML-NamespaceSupport-1.11.tar.gz)

build () {
	cd XML-NamespaceSupport-$version

	perl Makefile.PL

	make OPTIMIZE="$CFLAGS"
	make DESTDIR="$PKG" install

	find "$PKG" \( -name perllocal.pod -o -name .packlist \) -exec rm {} \;
	find "$PKG" -depth -type d -empty -exec rm -rf {} \;
}
